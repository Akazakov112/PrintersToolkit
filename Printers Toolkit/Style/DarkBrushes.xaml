        <GradientStop Color="#FFF18C10"
                      Offset="1"></GradientStop>
        <GradientStop Color="#FFFBC95B"
                      Offset="0"></GradientStop>
    </RadialGradientBrush>

    <SolidColorBrush x:Key="ToggleButtonBorderBrushON_forOccupado"
