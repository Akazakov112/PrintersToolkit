                     Color="#FCAF17" />

    <SolidColorBrush x:Key="ColorForegroundDisable"
                     Color="#1D1D1D" />

    <SolidColorBrush x:Key="ControlForeground"
                     Color="#FFFCAF17" />
    <SolidColorBrush x:Key="ControlForegroundGrey"
                     Color="#FFACACAC" />
    <SolidColorBrush x:Key="ControlForegroundWhite"
                     Color="#EEEFFF" />
    <SolidColorBrush x:Key="BorderBrushVisual"
                     Color="Transparent" />
    <SolidColorBrush x:Key="ControlPressedVisualBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="ControlDarkBackground"
                     Color="#242424" />

    <LinearGradientBrush x:Key="ControlDarkLinearBackground"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#FF1A1A1A"
                      Offset="0" />
        <GradientStop Color="#FF525252"
                      Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ControlLightBackgroundReserve"
