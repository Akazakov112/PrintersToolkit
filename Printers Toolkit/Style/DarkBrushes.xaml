    <LinearGradientBrush x:Key="ToggleButtonBackgroundOFF_forOccupado"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF969696"
                      Offset="0" />
        <GradientStop Color="#FF767676"
                      Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ToggleButtonBorderBrushOFF_forOccupado"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF888888"
                      Offset="1" />
        <GradientStop Color="#FF979797" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ToggleButtonBackBackground_forOccupado"
