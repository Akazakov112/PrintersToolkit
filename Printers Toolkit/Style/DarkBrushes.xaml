<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:System.Windows;assembly=PresentationFramework"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--Цвет хэдэров? Фон кнопок, переключателей-->
    <RadialGradientBrush x:Key="ControlBackgroundNormal"
                         GradientOrigin="0.5,0.5"
                         RadiusX="0.9"
                         RadiusY="0.9">
        <GradientStop Color="#654609"
                      Offset="1" />
        <GradientStop Color="#444444"
                      Offset="0.5" />
    </RadialGradientBrush>

    <!--Основной цвет фона-->
    <SolidColorBrush x:Key="ControlBackground"
                     Color="#292929" />

    <!--Цвет статусов подключения к серверу-->
    <SolidColorBrush x:Key="ConnectStatusOnline"
                     Color="#00FF7F" />
    <SolidColorBrush x:Key="ConnectStatusOffline"
                     Color="#FF0000" />

    <!--Цвет бордеров-->
    <LinearGradientBrush x:Key="ControlBorderBrush"
                         StartPoint="0,0.5"
                         EndPoint="1,0.5">
        <GradientStop Color="#777777"
                      Offset="0.204" />
        <GradientStop Color="#777777"
                      Offset="0.864" />
    </LinearGradientBrush>

    <!--Цвет наведения на кнопку-->
    <LinearGradientBrush x:Key="ControlBackgroundOver"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#A77041"
                      Offset="0" />
        <GradientStop Color="#7E580C"
                      Offset="1" />
    </LinearGradientBrush>

    <!--Цвет нажатия на кнопку-->
    <LinearGradientBrush x:Key="ControlBackgroundPressed"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#FCAF17"
                      Offset="0" />
        <GradientStop Color="#D99B20"
                      Offset="1" />
    </LinearGradientBrush>

    <!--Цвет бокового меню-->
    <SolidColorBrush x:Key="LeftMenuDrop"
                     Color="#3A3A3A" />

    <!--Цвет фона нектоторых контролов, типа прогрессбара-->
    <SolidColorBrush x:Key="ControlLightBackground"
                     Color="#292929" />

    <!--Цвет грацины выбранного элемента-->
    <SolidColorBrush x:Key="SelectedBorder"
                     Color="#fcaf17" />

    <!--Цвета выбранного элемента в комбобоксе, тривью и листах-->
    <Color x:Key="HighlightComboBoxItem1">#808080</Color>
    <Color x:Key="HighlightComboBoxItem2">#444444</Color>

    <!--Фон отключенного контрола-->
    <SolidColorBrush x:Key="DisabledBrush"
                     Color="#696969" />

    <!--Цвет текста отключенного контрола-->
    <SolidColorBrush x:Key="DisableForeground"
                     Color="#FFEEEFFF" />

    <!--Цвет текста выбранной строки датагрида и че то там в пассвордбоксе-->
    <Color x:Key="BorderLightBrushGradientColor1">#EEEFFF</Color>

    <!--Цвет галочки чекбокса и отметки-->
